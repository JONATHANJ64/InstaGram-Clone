{
    "version": 2,
    "builds": [
      {
        "src": "./client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "npm run build",
          "outputDirectory": "client/build"
        }
      },
      {
        "src": ".././server",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server"
      },
      {
        "src": "/(.*)",
        "dest": "client/build/$1"
      }
    ]
  }
